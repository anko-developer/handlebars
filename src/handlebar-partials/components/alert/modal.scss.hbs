.modal {
    @include overlay;
    z-index: 40;
    display: none;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    .form {
        &:not(:last-child) {
            &:not(.is-last) {
                margin-bottom: 10rem;
            }
        }
    }

    // Modifiers
    &.is-active {
        display: flex;
    }
}

.modal-background {
    @include overlay(fixed);
    background-color: rgba(0, 0, 0, 0.5);
}