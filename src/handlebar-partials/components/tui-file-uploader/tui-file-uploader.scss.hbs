.tui-file-uploader {
    .tui-file-uploader-header {
        line-height: 14px;
    }

    .buttons {
        margin-right: 14rem;
        margin-bottom: auto;
    }

    .button {
        padding: 0 17rem;
    }
}

.tui-file-uploader-header {
    display: flex;
    align-items: center;
}

.tui-file-uploader-msg {
    color: #909090;
}

.tui-file-uploader-tbl {
    line-height: 14px;

    tr {
        &:first-child {
            td {
                padding-top: 6px;
            }
        }

        &:last-child {
            td {
                padding-bottom: 6px;
            }
        }
    }

    th,
    td {
        border-bottom: none;
        padding-left: 10px;
    }

    th {
        border-right: none;
        border-bottom: 1px solid #eee;
        height: 22px;
        background-color: white;
        color: #003288;
    }

    td {
        height: 22px;
    }
}

.tui-file-name {
    line-height: 18px;
    color: #151515;
}

.tui-dropzone-support {
    .tui-dropzone-contents {
        margin-top: 22px;
    }
}