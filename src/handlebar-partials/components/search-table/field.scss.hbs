.field {
    &:not(:last-child) {
        &:not(.is-last) {
            margin-bottom: 7.5rem;
        }
    }

    // Modifiers
    &.is-grouped {
        display: flex;
        align-items: center;

        > .control {
            &:not(:last-child) {
                &:not(.is-last) {
                    margin-right: 3rem;
                    margin-bottom: 0;
                }
            }

            // Modifiers
            &.is-expanded {
                flex-grow: 1;
            }
        }

        // Modifiers
        &.is-top {
            align-items: flex-start;
        }

        &.is-centered-vertically {
            align-items: center;
        }

        &.is-bottom {
            align-items: flex-end;
        }

        &.is-left {
            justify-content: flex-start;
        }

        &.is-center {
            justify-content: center;
        }

        &.is-right {
            justify-content: flex-end;
        }

        &.has-space-between {
            justify-content: space-between;
        }

        &.is-wrapped {
            flex-wrap: wrap;

            > .control {
                &:not(:last-child) {
                    &:not(.is-last) {
                        margin-bottom: 7.5rem;
                    }
                }
            }
        }
    }
}