.tui-datepicker-input {
    border: none;
    width: 100%;
    height: 26px;
    background-color: white;
    vertical-align: middle;

    input {
        padding: 0 5rem;
        border: 1rem solid #dbdbdb;
        background-color: #fff;

        &:hover,
        &:focus {
            + .tui-ico-date {
                // icon-calendar
