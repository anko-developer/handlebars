.card {
    position: relative;
    border: 1rem solid #151515;
    padding: 0 29rem;
    background-color: white;
}

.card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 17rem;
    border-bottom: 1rem solid #e5e5e5;
    padding-top: 17rem;
    padding-bottom: 13rem;
}

.card-title {
    font-size: 16rem;
    line-height: 19rem;
    font-weight: 700;
}

.card-description {
    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: 50rem;
    padding-bottom: 66rem;
    font-weight: 700;
    font-size: 12rem;
    line-height: 14rem;
}

.card-footer {
    padding-top: 19rem;
    padding-bottom: 29rem;
}
